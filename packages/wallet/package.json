{
  "name": "@neufund/wallet",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "install-pods": "cd ios && pod install && cd ..",
    "format": "prettier --list-different '**/*.{ts,tsx,js,json,md,gql}'",
    "format:fix": "prettier --write '**/*.{ts,tsx,js,json,md,gql}'",
    "start:android": "react-native run-android",
    "start:android:release": "react-native run-android --variant release",
    "start:ios": "react-native run-ios",
    "start:ios:release": "react-native run-ios --configuration Release",
    "start:devtools": "react-devtools",
    "tsc": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepare": "echo 'Nothing to prepare for wallet yet...'",
    "test": "jest",
    "test:watch": "jest --watch",
    "e2e:build:ios-debug": "detox build --configuration ios.sim.debug",
    "e2e:build:ios-release": "detox build --configuration ios.sim.release",
    "e2e:build:android-debug": "detox build --configuration android.emu.debug",
    "e2e:build:android-release": "detox build --configuration android.emu.release",
    "e2e:test:ios-debug": "detox test --configuration ios.sim.debug",
    "e2e:test:ios-release": "detox test --configuration ios.sim.release",
    "e2e:test:android-debug": "detox test --configuration android.emu.debug",
    "e2e:test:android-release": "detox test --configuration android.emu.release",
    "e2e:ios-debug": "yarn e2e:build:ios-debug && yarn e2e:test:ios-debug",
    "e2e:ios-release": "yarn e2e:build:ios-release && yarn e2e:test:ios-release",
    "e2e:android-debug": "yarn e2e:build:android-debug && yarn e2e:test:android-debug",
    "e2e:android-release": "yarn e2e:build:android-release && yarn e2e:test:android-release",
    "storybook": "(adb reverse tcp:7007 tcp:7007 || true) && start-storybook",
    "storybook:ios": "ENVFILE=./storybook/.storybook-config react-native run-ios",
    "storybook:ios:release": "ENVFILE=./storybook/.storybook-config react-native run-ios --configuration Release",
    "storybook:android": "ENVFILE=./storybook/.storybook-config react-native run-android",
    "storybook:android:release": "ENVFILE=./storybook/.storybook-config react-native run-android --variant release"
  },
  "dependencies": {
    "@neufund/shared": "^1.0.0",
    "@neufund/sagas": "^1.0.0",
    "@neufund/shared-modules": "^1.0.0",
    "@react-native-community/masked-view": "^0.1.6",
    "@react-navigation/native": "^5.0.1",
    "@react-navigation/stack": "^5.0.1",
    "react": "16.9.0",
    "react-native": "0.61.5",
    "react-native-config": "^0.12.0",
    "react-native-gesture-handler": "^1.5.6",
    "react-native-reanimated": "^1.7.0",
    "react-native-safe-area-context": "^0.7.2",
    "react-native-screens": "^2.0.0-beta.2",
    "tslib": "^1.10.0",
    "redux": "^4.0.1",
    "inversify": "^4.10.0",
    "react-redux": "^6.0.0",
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^0.0.5",
    "@testing-library/react-native": "^5.0.3",
    "@storybook/addon-knobs": "^5.3.13",
    "@storybook/addon-links": "^5.3.13",
    "@storybook/addon-actions": "^5.3.13",
    "@storybook/addon-ondevice-actions": "^5.3.13",
    "@storybook/addon-ondevice-knobs": "^5.3.13",
    "@storybook/addon-ondevice-notes": "^5.3.13",
    "@storybook/react-native": "^5.3.13",
    "@storybook/react-native-server": "^5.3.13",
    "@types/detox": "^14.5.2",
    "@types/jest": "^25.1.2",
    "@types/react-native": "^0.60.25",
    "@types/react-test-renderer": "16.9.1",
    "@types/react-redux": "^6.0.11",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "detox": "^15.2.0",
    "eslint": "^6.5.1",
    "jest": "^25.1.0",
    "metro-react-native-babel-preset": "^0.56.0",
    "prettier": "^1.19.1",
    "react-devtools": "^3.6.3",
    "react-test-renderer": "16.9.0",
    "typescript": "^3.7.3"
  },
  "workspaces": {
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-*",
      "**/react-native-*/**",
      "**/detox",
      "**/detox/**",
      "**/@types/detox",
      "**/@types/detox/**",
      "**/@types/jest",
      "**/@types/jest/**",
      "**/jest",
      "**/jest/**"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/wallet.app",
        "build": "xcodebuild -workspace ios/wallet.xcworkspace -scheme wallet -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone X"
        }
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/wallet.app",
        "build": "xcodebuild -workspace ios/wallet.xcworkspace -scheme wallet -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone X"
        }
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Nexus_5X_API_29_x86"
        }
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Nexus_5X_API_29_x86"
        }
      }
    },
    "test-runner": "jest",
    "runner-config": "./tests/e2e/jest.config.json"
  }
}
