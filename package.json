{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10.0.0 <12.0.0"
  },
  "scripts": {
    "lint": "wsrun lint",
    "test": "wsrun test",
    "update-submodules": "git submodule update --init --recursive",
    "prepare": "yarn update-submodules && wsrun --stages prepare",
    "deduplicate": "yarn-deduplicate",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "yarn-deduplicate": "^1.1.1",
    "patch-package": "^6.1.0",
    "wsrun": "^5.2.0"
  }
}
